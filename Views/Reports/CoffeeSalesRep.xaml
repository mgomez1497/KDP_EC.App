<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:shared="clr-namespace:KDP_EC.App.Views.Shared"
             x:Class="KDP_EC.App.Views.Reports.CoffeeSalesRep"
             Title="CoffeeSalesRep"
             BackgroundColor="{StaticResource Primary}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

       
        <shared:SidebarMenu Grid.Column="0" />

        
        <ScrollView Grid.Column="1">
            <VerticalStackLayout Padding="30" Spacing="20">

                
                <Label Text="Reporte de Ventas de Café"
                       FontSize="24"
                       HorizontalOptions="Center"
                       FontAttributes="Bold" />

               
                <Picker x:Name="yearPicker"
                        Title="Seleccione un año"
                        TitleColor="Gray"
                        WidthRequest="200"
                        HorizontalOptions="Center" />

                
                <CollectionView x:Name="reportListView">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="#2D2D2D" 
                                BorderColor="DarkGray"
                                   CornerRadius="10"
                                   Margin="10"
                                   Padding="15"
                                   HasShadow="True">
                                <VerticalStackLayout>
                                    <Label Text="{Binding Name}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="DarkGreen" />

                                    <Label Text="{Binding KgCereza, StringFormat='Kg Cereza: {0:F2}'}"  TextColor="White"/>
                                    <Label Text="{Binding KgPergamino, StringFormat='Kg Pergamino: {0:F2}'}"  TextColor="White" />
                                    <Label Text="{Binding Percents, StringFormat='Porcentaje: {0:F2}%'}"  TextColor="White"/>
                                    <Label Text="{Binding ConvertFactor, StringFormat='Factor de Conversión: {0:F2}'}"  TextColor="White" />
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>