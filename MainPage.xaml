<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KDP_EC.App.MainPage"
             Title=""
             Shell.NavBarIsVisible="False"
             BackgroundColor="White">

    <ContentPage.Resources>
        <Style x:Key="EntryEstilo" TargetType="Entry">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BackgroundColor" Value="#f0f0f0"/>
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="HeightRequest" Value="50"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="PlaceholderColor" Value="#888"/>
            
        </Style>

        <Style x:Key="BotonEstilo" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#2e7d32"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="CornerRadius" Value="25"/>
            <Setter Property="HeightRequest" Value="50"/>
            <Setter Property="HorizontalOptions" Value="FillAndExpand"/>

        </Style>
    </ContentPage.Resources>

    <Grid>
        
        <Image Source="background.jpg"
               Aspect="AspectFill"
               Opacity="1"
               HorizontalOptions="Fill"
               VerticalOptions="Fill" />

        
        <Grid HorizontalOptions="Center" VerticalOptions="Center">
            <Border Stroke="Transparent"
                    StrokeThickness="0"
                    Background="White"
                    Padding="30"
                    StrokeShape="RoundRectangle 20"
                    WidthRequest="320">
                
                <VerticalStackLayout Spacing="15">
                    <Label Text="Iniciar Sesión"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="Black"
                           HorizontalOptions="Center"/>

                    <Entry x:Name="UsernameEntry" Placeholder="Usuario" Style="{StaticResource EntryEstilo}" />
                    <Entry x:Name="PasswordEntry" Placeholder="Contraseña" IsPassword="True" Style="{StaticResource EntryEstilo}" />

                    <Button Text="Iniciar Sesión" Clicked="OnLoginClicked" Style="{StaticResource BotonEstilo}" />

                    <Label x:Name="LoginResultLabel" Text="" TextColor="Red" HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Border>
        </Grid>
    </Grid>
</ContentPage>